<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.open.roundimageview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#000000">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:layout_gravity="center"
	    android:orientation="vertical">
	
	       <Button 
	                android:id="@+id/default_imageView"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					android:text="默认 ImageView"/>
	       		
	       	<Button 
	                android:id="@+id/round_imageView"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					android:text="圆角边框 ImageView 1 "/>	
			<Button 
	                android:id="@+id/round_imageView2"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="圆角边框 ImageView 2 "/>	
			<Button 
	                android:id="@+id/round_imageView3"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="圆角边框 ImageView 3 "/>	
			<Button 
	                android:id="@+id/round_imageView4"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="圆角边框 ImageView 4 "/>
		  
		  <Button 
	                android:id="@+id/circular_imageView"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					android:text="圆型 ImageView 1"/>
		 <Button 
	                android:id="@+id/circular_imageView2"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="圆型 ImageView 2"/>
		<Button 
	                android:id="@+id/circular_imageView3"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="圆型 ImageView 3"/>
		 <Button 
	                android:id="@+id/circular_imageView4"
			    	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="圆型 ImageView 4"/>	
	
	</LinearLayout>

</ScrollView>